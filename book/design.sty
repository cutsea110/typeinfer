%%%%%%%%%% ヘッダとフッタ

\def\ps@mypagestyle{
  \def\@oddhead{\hspace{-\paperwidth}\underline{\hbox to 2\paperwidth{%
    \hfil\rightmark\hspace{\paperwidth}\hspace{-\fullwidth}}}}
  \def\@evenhead{\hspace{-\paperwidth}\underline{\hbox to 2\paperwidth{%
    \hspace{\paperwidth}\hspace{\textwidth}\hspace{-\fullwidth}\leftmark\hfil}}}
  \def\@oddfoot{\hbox to \fullwidth{\hfil\textbf\thepage}\hss}
  \def\@evenfoot{\hss\hbox to \fullwidth{\textbf\thepage\hfil}}
  \let\@mkboth\markboth
  \def\chaptermark##1{\markboth{%
    \ifnum \c@secnumdepth >\m@ne%
      \if@mainmatter%
        \@chapapp\thechapter\@chappos\hskip1zw%
      \fi%
    \fi%
    ##1}{}}
  \def\sectionmark##1{\markright{%
    \ifnum \c@secnumdepth >\z@ \thesection \hskip1zw\fi%
    ##1}}}

\def\ps@plainfoot{
  \let\@mkboth\@gobbletwo
  \let\@oddhead\@empty
  \let\@evenhead\@empty
  \def\@oddfoot{\hbox to \fullwidth{\hfil\textbf\thepage}\hss}
  \def\@evenfoot{\hss\hspace{1em}\hbox to \fullwidth{\textbf\thepage\hfil}}}

\renewcommand{\chapter}{
  \if@openright\cleardoublepage\else\clearpage\fi
  \thispagestyle{plainfoot}
  \global\@topnum\z@
  \if@english \@afterindentfalse \else \@afterindenttrue \fi
  \secdef\@chapter\@schapter}

