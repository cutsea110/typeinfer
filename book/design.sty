
\setlength\footskip{2zh}

%%%%%%%%%% ヘッダとフッタ

\def\ps@headings{
  \def\@oddhead{\underline{\hbox to \fullwidth{
    \hfil{\if@twoside\rightmark\else\leftmark\fi}}}\hss}
  \def\@oddfoot{\hfil\textbf\thepage}
  \def\@evenhead{
    \if@mparswitch \hss \fi
    \underline{\hbox to \fullwidth{\leftmark\hfil}}
    \if@mparswitch\else \hss \fi}
  \def\@evenfoot{\textbf\thepage\hfil}
  \let\@mkboth\markboth
  \def\chaptermark##1{\markboth{
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \@chapapp\thechapter\@chappos\hskip1zw
      \fi
    \fi
    ##1}{}}
  \def\sectionmark##1{\markright{
    \ifnum \c@secnumdepth >\z@ \thesection \hskip1zw\fi
    ##1}}}

\def\ps@plainfoot{
  \let\@mkboth\@gobbletwo
  \let\@oddhead\@empty
  \def\@oddfoot{\hfil\textbf\thepage}
  \let\@evenhead\@empty
  \def\@evenfoot{\textbf\thepage\hfil}}

\renewcommand{\chapter}{
  \if@openright\cleardoublepage\else\clearpage\fi
  \thispagestyle{plainfoot}
  \global\@topnum\z@
  \if@english \@afterindentfalse \else \@afterindenttrue \fi
  \secdef\@chapter\@schapter}

%%%%%%%%%% 見出し

\def\@makechapterhead#1{
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \huge \hspace*{0.5em} \@chapapp\thechapter\@chappos
        \par\nobreak
        \begin{picture}(0,0)
        \put(0,0.0){\color[gray]{0.0}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,0.4){\color[gray]{0.1}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,0.8){\color[gray]{0.2}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,1.2){\color[gray]{0.3}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,1.6){\color[gray]{0.4}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,2.0){\color[gray]{0.5}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,2.4){\color[gray]{0.6}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,2.8){\color[gray]{0.7}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,3.2){\color[gray]{0.8}\rule[0zw]{\linewidth}{0.4pt}}
        \put(0,3.6){\color[gray]{0.9}\rule[0zw]{\linewidth}{0.4pt}}
        \end{picture}
      \fi
    \fi
    \interlinepenalty\@M
    \begin{flushright}
    \Huge #1 \hspace*{0.5em} \par\nobreak
    \end{flushright}
    \vskip 3\Cvs}}

