%%%%%%%%%% ヘッダとフッタ

\newcommand{\footdec}{\begin{picture}(10, 0)\color[gray]{0.4}\rule[-1.8in]{10pt}{2in}\end{picture}}

\def\ps@headings{
  \def\@oddhead{\hspace{-1in}\hspace{-\voffset}\hspace{-\oddsidemargin}%
    \underline{\hbox to \paperwidth{\hfil\rightmark\hspace{\oddsidemargin}\hspace{1in}\hspace{\voffset}}}}
  \def\@evenhead{\hspace{-1in}\hspace{-\voffset}\hspace{-\evensidemargin}%
    \underline{\hbox to \paperwidth{\hspace{1in}\hspace{\voffset}\hspace{\oddsidemargin}\leftmark\hfil}}}
  \def\@oddfoot{\hbox to \fullwidth{\hfil\textbf\thepage\hspace{5pt}\footdec}\hss}
  \def\@evenfoot{\hss\hbox to \fullwidth{\footdec\hspace{5pt}\textbf\thepage\hfil}}
  \let\@mkboth\markboth
  \def\chaptermark##1{\markboth{
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \@chapapp\thechapter\@chappos\hskip1zw
      \fi
    \fi
    ##1}{}}
  \def\sectionmark##1{\markright{
    \ifnum \c@secnumdepth >\z@ \thesection \hskip1zw\fi
    ##1}}}

\def\ps@plainfoot{
  \let\@mkboth\@gobbletwo
  \let\@oddhead\@empty
  \let\@evenhead\@empty
  \def\@oddfoot{\hbox to \fullwidth{\hfil\textbf\thepage\hspace{5pt}\footdec}\hss}
  \def\@evenfoot{\hss\hbox to \fullwidth{\footdec\hspace{5pt}\textbf\thepage\hfil}}}

\renewcommand{\chapter}{
  \if@openright\cleardoublepage\else\clearpage\fi
  \thispagestyle{plainfoot}
  \global\@topnum\z@
  \if@english \@afterindentfalse \else \@afterindenttrue \fi
  \secdef\@chapter\@schapter}

