LATEX = platex --interaction=nonstopmode --kanji=utf8
DVIPDFM = dvipdfmx

DVIPSFLAGS = -t b5 -P pdf
DVIPDFMFLAGS = -p b5

TEXDEPS = main.tex preface.tex lambda.tex typeinfer-stlc.tex typeinfer-poly.tex colophon.tex

main_draft.pdf : main_draft.ps
	ps2pdf main_draft.ps

main_final.pdf : main_final.ps
	ps2pdf main_final.ps

LaTeXDocument(main_draft, main_draft)
LaTeXDocument(main_final, main_final)

.DEFAULT : main_draft.pdf main_final.pdf

